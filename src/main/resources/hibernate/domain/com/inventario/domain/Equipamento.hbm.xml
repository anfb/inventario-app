<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true" default-access="property" default-cascade="none" default-lazy="true">
	<class dynamic-insert="false" dynamic-update="false" mutable="true" name="com.inventario.domain.Equipamento" optimistic-lock="version" polymorphism="implicit" schema="INVENTARIO" select-before-update="false" table="EQUIPAMENTOS">
		
	
		<id name="CODEQUP" type="integer" unsaved-value="undefined" column="codeEqp">
      		<generator class="increment" />
    	</id>
		
		<!-- TIPO EQUIPAMENTO -->
		<property generated="never" lazy="false" name="TPEQP" optimistic-lock="true" type="long" unique="false">
			<column length="1" name="TPEQP" not-null="true" />
		</property>
		
		<!-- MODELO EQUIPAMENTO -->
		<property generated="never" lazy="false" name="MODELOEQP" optimistic-lock="true" type="string" unique="false">
			<column length="100" name="MODELOEQP" not-null="true" />
		</property>
		
		<!-- DATA AQUISICAO EQUIPAMENTO -->
		<property generated="never" lazy="false" name="DTCOMPRAEQP" optimistic-lock="true" type="date" unique="false">
			<column length="7" name="DTCOMPRAEQP" not-null="true" />
		</property>
		
		<!-- VALOR EQUIPAMENTO -->
		<property generated="never" lazy="false" name="VALEQP" optimistic-lock="true" type="big_decimal" unique="false">
			<column length="7" name="VALEQP" not-null="true" />
		</property>
				
	<!-- 	 FOTO EQUIPAMENTO 
		<property generated="never" lazy="false" name="FTEQP">
			<column length="1" name="MODELOEQP" not-null="true">
		</property> -->
		
	</class>	
</hibernate-mapping>